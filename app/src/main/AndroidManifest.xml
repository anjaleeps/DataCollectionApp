<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.datacollectionapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DataCollectionApp">
        <activity android:name=".screens.record.NewRecordActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.formtemplate.NewFormTemplateActivity"
            android:parentActivityName=".screens.project.NewProjectActivity"
            android:exported="true" />
        <activity android:name=".screens.projectrecords.ProjectRecordsActivity"
            android:exported="true" />
        <activity android:name=".screens.project.NewProjectActivity"
            android:exported="true" />

        <activity android:name=".screens.projectlist.ProjectListActivity"
            android:exported="true"/>
    </application>

</manifest>